<resources>

    <style name="user_face_image">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:padding">1dp</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@mipmap/widget_default_face</item>
    </style>

    <!-- user_info_statistics_section -->
    <style name="new_user_information_counts">
        <item name="android:layout_width">0dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_user_info_tab_item</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!-- user_info_text -->
    <style name="user_information_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="user_information_info" parent="user_information_text">
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <!-- 操作项样式 start -->
    <style name="option_item_rl">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/ic_material</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/space_12</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="option_item_text_parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/main_black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">false</item>
        <item name="android:layout_marginRight">@dimen/space_4</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>

    <style name="option_item_text" parent="@style/option_item_text_parent">
        <item name="android:textColor">?attr/textColor</item>
    </style>
    <!-- 操作项样式end -->

</resources>
